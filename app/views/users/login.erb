<div class="login-background">
  <div class="d-flex justify-content-center">
    <div class="login-wrapping">
      <div class="container">
        <div class="col-md-10">
          <h1 class="login-heading">Please Log in</h1><br />
          <%= erb :'partials/_messages'  %>
          <%#= flash_toastr %>
          <form method="post" action="/users/log_in">
            <div class="form-group text-light">
              <label for="username">Username</label><br />
              <input type="text" id="username" name="username" class="form-control form-input-border"/>
            </div>

            <div class="form-group text-light">
              <label for="password">Password</label><br />
              <input type="password" name="password" id="password" class="form-control form-input-border" />
            </div>

            <div class="form-group text-light">
              <button class="btn btn-info btn-lg form-input-border">Log In</button>
            </div>
           <div class="text-light">
            <p> Do not have an account, click <a href="/users/sign_up">here</a> to sign up</p>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>