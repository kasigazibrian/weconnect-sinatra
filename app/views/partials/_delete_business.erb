<div class="modal fade" id="deleteBusinessModal">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">Delete Business</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete business with name <%= @business.business_name %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info" data-dismiss="modal">Close</button>
        <button type="submit" id="<%= @business.id %>" class="btn btn-danger confirmDeleteBusiness" data-dismiss="modal">Delete</button>
      </div>
    </div>
  </div>
</div>
