<% unless @businesses.length == 0 %>
  <% @businesses.each do |business| %>
    <div class="col-xs-6 col-md-4">
      <div class="business-card">
        <div class="card border-light mb-3 card-min-height">
          <div class="card-header" style="font-size: 30px"><strong><%= business.business_name %></strong>
            <div class="social-media">
              <span><a href="http://www.facebook.com"><i class="fab fa-facebook-square"></i></a></span>
              <span><a href="http://"><i class="fab fa-twitter-square"></i></a></span>
              <span><a href="#"><i class="fab fa-youtube-square"></i></a></span>
              <span><a href="#"><i class="fab fa-linkedin"></i></a></span>
              <span><a href="#"><i class="fab fa-instagram"></i></a></span>
            </div>
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= business.category.name %></h5>
            <div class="business-card-text"><p class="card-text"><%= business.business_description %></p></div>
          </div>
          <a href="/businesses/<%= business.id %>/profile" class="btn btn-lg btn-info"> View Profile</a>
        </div>
      </div>
    </div>
  <% end %>
<% else %>
  <div style="margin: 5rem auto">
    <div class="card text-white bg-dark mb-3">
      <div class="card-header">Ooops :)</div>
      <div class="card-body">
        <p class="card-text">No businesses registered yet</p>
      </div>
    </div>
  </div>
<% end %>